{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "paths": {
      "@data": [
        "./src/data"
      ],
      "@module/*": [
        "./src/module/*"
      ],
      "@type": [
        "./src/type"
      ]
    },
    "rootDir": "./",
    "strict": true,
    "target": "es2022",
    "types": [
      "bun-types"
    ]
  },
  "exclude": [
    "src/**/*.test.ts"
  ]
}
